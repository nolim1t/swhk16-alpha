<%= form_for :stolenorlostordestroyed_status, method: :put, html: { role: "form", class: "form-horizontal"} do |f| %>

	<%= f.hidden_field :id, value: card.id %>
	
<div class = "container-fluid" >

	<div class="col-xs-12 col-md-8 col-lg-8">
		  <div class="col-xs-12 text-center purpletext">
		  	<h5>Card History</h5>
		  </div>
	    <div class="spacebox30 col-xs-12"></div>
	    <div class="col-xs-12 text-center">
	    	<div class="notesblock">
	    	
	    	</p>
	    </div>
	    </div>

	</div>

	<div class="col-xs-12 col-md-4 col-lg-4">
		<div class="col-xs-12 text-center purpletext">
		  	<h5>An issue with this card?</h5>
		  	<p> Reporting an issue on the card will remove access to Transfer of Ownership, Edit Card and Expert Check.
	    		To revert it, please contact Support.</p>
		  </div>
		  <div class="spacebox30 col-xs-12"></div>
	  <div class="col-xs-12">	  
			<select class="form-control" name="loststolendestroyed-select">
			<option value="0" selected>No problem</option>
			<option value="1">Report as Lost</option>
			<option value="2">Report as Stolen</option>
			<option value="3">Report as Destroyed</option>
			</select>
			<div class="spacebox30 col-xs-12"></div>
			<div class="col-xs-12">
			    <div class="col-xs-8 col-xs-offset-2 col-md-12 col-md-offset-0 col-lg-12 col-lg-offset-0">
			 		<%= f.submit "Submit", class: "btn btn-primary btn-purple btn-block" %>
			 	</div>
	    	</div>
	    	<div class="spacebox30 col-xs-12"></div>
	    	<div class="col-xs-12">
			    <div class="col-xs-8 col-xs-offset-2 col-md-12 col-md-offset-0 col-lg-12 col-lg-offset-0">
			 		<%= f.submit "Delete Card", data: { confirm: "Really delete this card?" }, class: "btn btn-primary btn-block btn-danger", role: "button" do %> <%end %>
			 	</div>
	    	</div>
	  </div> 
	  <div class="spacebox30 col-xs-12"></div>
	</div>	
	<div class="spacebox20 col-xs-12"></div>

</div>
<% end %>