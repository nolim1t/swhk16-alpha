<%= javascript_include_tag "modernizr.custom" %>

<div id="static-pagination" >
	<%= will_paginate @cards %>
</div>

<section class="image-grid">
		<div class="image__cell is-collapsed">
			<div class="image--basic">
				  <a class="thumbnail" href="#expand-jump-0">
				      <%= image_tag("addcardpicture.png", :alt => "Add Button", class: "img-responsive image-button", id: "expand-jump-0") %>
				  </a>
				  <div class="arrow--up"></div>
			</div>
			<div class="image--expand">
			  <!-- <a href="#close-jump-0" class="expand__close" id="#close-jump-0"></a> -->
			  <div class="spacebox10 col-xs-12"></div>
			  <ul class="nav nav-tabs">
			    <li class="active"><a data-toggle="tab">Add New Card</a></li>	 
			  </ul>
			  <div class="spacebox30 col-xs-12"></div>
			  <%= render "card_new_form" %>
			</div>
		</div>

		<div id="is-cards">
			<div class="page-delimiter first-page" data-page="<%= params[:page] || 1 %>"  ></div>
			<%= render partial: "card", collection: @cards %>
		</div>
</section>

<% if @cards.next_page %>
  <div id="infinite-scrolling">
  	<%= will_paginate %>
  </div>
<% end %>

<%= javascript_include_tag 'expand', 'data-turbolinks-track' => true %>