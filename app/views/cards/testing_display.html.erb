<%= javascript_include_tag "modernizr.custom" %>
<!-- <div class="container">	 -->
<section class="image-grid">
		<!-- <ul id="og-grid" class="thumb og-grid"> -->
		<% @cards_and_images.each_with_index do |(card, cardimages), index| %> 
			
				<%card_table= card %>
				<%front = cardimages[0].present? ? cardimages[0].photo.url : nil %>
				<%back = cardimages[1].present? ? cardimages[1].photo.url : nil %> 
				<div class="image__cell is-collapsed">
					<div class="image--basic">
						<a href="#expand-jump-<%=index %>" class="thumbnail" data-description="Swiss chard pumpkin bunya nuts maize plantain aubergine napa cabbage soko coriander sweet pepper water spinach winter purslane shallot tigernut lentil beetroot." data-largesrc="<%= front %>" data-smallsrc= "<%= back %>" data-table="#{@partial_table}" data-title="Super cool card Display!" href="#">
						  <img id="expand-jump-<%=index %>" class="img-responsive" src="<%= cardimages[0].photo.thumb.url %>"/>
						</a>
						 <div class="arrow--up"></div>
					</div>
			
					<div class="image--expand tab-card">
			      <a href="#close-jump-<%=index %>" class="expand__close"></a>
					    <ul class="nav nav-tabs">
					      <li class="active"><a href="#card_detail-tab-<%=index %>" data-toggle="tab">Card Detail</a></li>
					      <li><a href="#edit-tab-<%=index %>" data-toggle="tab">Edit Card</a></li>
					      <li><a href="#transfer-tab-<%=index %>" data-toggle="tab">Transfer Ownership</a></li>
					      <li><a href="#expert-tab-<%=index %>" data-toggle="tab">Expert Check</a></li>
					      <li><a href="#history-tab-<%=index %>" data-toggle="tab">Card History</a></li>
					    </ul>
						    <!-- Tab panes -->
					    <div class="tab-content ">
					      <div class="tab-pane active col-xs-12 col-md-12 col-lg-12" id="card_detail-tab-<%=index %>">
					      	<div class="col-xs-6 col-md-4 col-lg-3" >
										<img class="img-responsive" src="<%= front %>"/>
									</div>

									<div class="col-xs-6 col-md-4 col-lg-3" >
						      	<% if back.present? %>
						      		<img class="img-responsive" src="<%= back %>"/>
						      	<% else %>
						      		<p class="text-center"> No Back Image </p>
						      	<% end %>
						      </div>
							    <div class="col-xs-12 col-md-4 col-lg-6" >
						      	<%= render partial: 'card_table', locals: { :card_table => card_table } %>
						      </div>
					      </div>
					      <div class="tab-pane" id="edit-tab-<%=index %>" class="edit">
					      	<%= render partial: 'card_edit_form', locals: { :card_table => card_table } %>
					      </div>
					      <div class="tab-pane" id="transfer-tab-<%=index %>">
					      	<%= render partial: 'transfer_ownership_form', locals: { :card_table => card_table } %>
					      </div>
					      <div class="tab-pane" id="expert-tab-<%=index %>">
					      	<%= render partial: 'expert_check_form', locals: { :card_table => card_table } %>
					      </div>
					      <div class="tab-pane" id="history-tab-<%=index %>">
					      	<p class="text-center"> Place Holder text for notes </p>
					      	</div>
					    </div>
			    </div>
			  </div>
		<% end %>
	
<!-- </div>/container -->
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
