<% cardimage_front = Cardimage.where(:card_id => card._id.to_s, :image_type => "front").order_by([:create_date, :desc])[0] %>
<% cardimage_back = Cardimage.where(:card_id => card._id.to_s, :image_type => "back").order_by([:create_date, :desc])[0] %>
<%front = cardimage_front.present? ? cardimage_front.photo.thumb.url : nil %>
<%back = cardimage_back.present? ? cardimage_back.photo.thumb.url : nil %> 
<%front_big = cardimage_front.present? ? cardimage_front.photo.url : nil %>
<%back_big = cardimage_back.present? ? cardimage_back.photo.url : nil %> 

<div class="image__cell is-collapsed">
	<div class="image--basic">
		<a href="#expand-jump-<%=card.id %>" class="thumbnail">
			<img id="expand-jump-<%=card.id %>" class="img-responsive" src="<%= front %>"/>
		</a>
		 <div class="arrow--up"></div>
	</div>

	<div class="image--expand">
    <!-- <a href="#close-jump-<%=card.id %>" class="expand__close"></a> -->
    	<div class="spacebox10 col-xs-12"></div>
	    <ul class="nav nav-tabs">
	      <li class="active"><a href="#card_detail-tab-<%=card.id %>" data-toggle="tab">Card Detail</a></li>
	      
	      <% if card[:validation_status] == 1 %>
	        <li class="disabled"><a href="#expand-jump-<%=card.id %>">Edit Card</a></li>
	        <li class="disabled"><a href="#expand-jump-<%=card.id %>">Transfer Ownership</a></li>
	      <% else %>
	        <li><a href="#edit-tab-<%=card.id %>" data-toggle="tab">Edit Card</a></li>
	        <li><a href="#transfer-tab-<%=card.id %>" data-toggle="tab">Transfer Ownership</a></li>
	      <% end %>

	      <li><a href="#expert-tab-<%=card.id %>" data-toggle="tab">Expert Check</a></li>
	      <li><a href="#history-tab-<%=card.id %>" data-toggle="tab">Card History</a></li>
	    </ul>
		    <!-- Tab panes -->
	    <div class="tab-content">
	      <div class="tab-pane active" id="card_detail-tab-<%=card.id %>">
	      	<div class="spacebox30"></div>
	      	<div class="col-xs-6 col-md-3 col-lg-3 text-center" >
			  <img class="img-responsive center-block" src="<%= front %>"/>
			
			  <div class="spacebox30"></div>
			  <div class="col-xs-12">
			    <a href="<%= front_big %>" type="button" target="_blank" class="btn btn-success btn-purple btn-block">Full Picture</a>
			  </div>
			</div>



			<div class="col-xs-6 col-md-3 col-lg-3" >
		      <% if back.present? %>
		      	<img class="img-responsive center-block" src="<%= back %>"/>

		        <div class="spacebox30"></div>
			    <div class="col-xs-12">
			      <a href="<%= back_big %>" type="button" target="_blank" class="btn btn-success btn-purple btn-block">Full Picture</a>
			    </div>
		      <% else %>
		      	<p> No Back Image </p>
		      <% end %>
		    </div>
			<div class="col-xs-12 col-md-6 col-lg-6" >
		      <%= render partial: 'card_table', locals: { :card => card } %>
		    </div>
		    <div class="spacebox30 col-xs-12"></div>
	      </div>

	      <div class="tab-pane" id="edit-tab-<%=card.id %>">
	      	<div class="spacebox30"></div>
	      	<%= render partial: 'card_edit_form', locals: { :card => card } %>
	      </div>
	      <div class="tab-pane" id="transfer-tab-<%=card.id %>">
	      	<div class="spacebox30"></div>
	      	<%= render partial: 'transfer_ownership_form', locals: { :card => card } %>
	      </div>
	      <div class="tab-pane" id="expert-tab-<%=card.id %>">
	      	<div class="spacebox30"></div>
	      	<%= render partial: 'expert_check_form', locals: { :card => card } %>
	      </div>
	      <div class="tab-pane" id="history-tab-<%=card.id %>">
	      	<div class="spacebox30"></div>
	      	<%= render partial: 'card_history_form', locals: { :card => card } %>
	      </div>
	    </div>
  </div>
</div>
