<% cardimage_front = Cardimage.where(:card_id => card._id.to_s, :image_type => "front").order_by([:create_date, :desc])[0] %>
<% cardimage_back = Cardimage.where(:card_id => card._id.to_s, :image_type => "back").order_by([:create_date, :desc])[0] %>
<%front = cardimage_front.present? ? cardimage_front.photo.url : nil %>
<%back = cardimage_back.present? ? cardimage_back.photo.url : nil %> 
<div class="image__cell is-collapsed">
	<div class="image--basic">
		<a href="#expand-jump-<%=card_counter+1 %>" class="thumbnail">
			<img id="expand-jump-<%=card_counter+1 %>" class="img-responsive" src="<%= cardimage_front.photo.thumb.url %>"/>
		</a>
		 <div class="arrow--up"></div>
	</div>

	<div class="image--expand">
    <!-- <a href="#close-jump-<%=card_counter+1 %>" class="expand__close"></a> -->
    	<div class="spacebox10 col-xs-12"></div>
	    <ul class="nav nav-tabs">
	      <li class="active"><a href="#card_detail-tab-<%=card_counter %>" data-toggle="tab">Card Detail</a></li>
	      <li><a href="#edit-tab-<%=card_counter %>" data-toggle="tab">Edit Card</a></li>
	      <li><a href="#transfer-tab-<%=card_counter %>" data-toggle="tab">Transfer Ownership</a></li>
	      <li><a href="#expert-tab-<%=card_counter %>" data-toggle="tab">Expert Check</a></li>
	      <li><a href="#history-tab-<%=card_counter %>" data-toggle="tab">Card History</a></li>
	    </ul>
		    <!-- Tab panes -->
	    <div class="tab-content">
	      <div class="tab-pane active" id="card_detail-tab-<%=card_counter %>">
	      	<div class="spacebox30"></div>
	      	<div class="col-xs-6 col-md-3 col-lg-3" >
						<img class="img-responsive" src="<%= front %>"/>
					</div>

					<div class="col-xs-6 col-md-3 col-lg-3" >
		      	<% if back.present? %>
		      		<img class="img-responsive" src="<%= back %>"/>
		      	<% else %>
		      		<p> No Back Image </p>
		      	<% end %>
		      </div>

			    <div class="col-xs-12 col-md-6 col-lg-6" >
		      	<%= render partial: 'card_table', locals: { :card => card } %>
		      </div>
		      <div class="spacebox30 col-xs-12"></div>
	

	      </div>
	      <div class="tab-pane" id="edit-tab-<%=card_counter %>" class="edit">
	      	<div class="spacebox30"></div>
	      	<%= render partial: 'card_edit_form', locals: { :card => card } %>
	      </div>
	      <div class="tab-pane" id="transfer-tab-<%=card_counter %>">
	      	<div class="spacebox30"></div>
	      	<%= render partial: 'transfer_ownership_form', locals: { :card => card } %>
	      </div>
	      <div class="tab-pane" id="expert-tab-<%=card_counter %>">
	      	<div class="spacebox30"></div>
	      	<%= render partial: 'expert_check_form', locals: { :card => card } %>
	      </div>
	      <div class="spacebox30"></div>
	      <div class="tab-pane" id="history-tab-<%=card_counter %>">Placeholdertext for notes</div>
	    </div>
  </div>
</div>
