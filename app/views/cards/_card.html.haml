.col-lg-3.col-md-4.col-xs-6.thumb
  -if card.validation_status==2
    %a.thumbnail.red{:href => "#", onclick: "document.location.href='/cards/detail/#{card.id}';"}
      -card_image_count = 0
      - @cardimages.each do |cardimage|
        -if card_image_count == 0 and cardimage.image_type == "front" and cardimage.card_id == card._id then
          %img.img-responsive{:src => "#{cardimage.photo.thumb.url}"}
          -card_image_count += 1
  -else
    %a.thumbnail{:href => "#", onclick: "document.location.href='/cards/detail/#{card.id}';"}
      -card_image_count = 0
      - @cardimages.each do |cardimage|
        -if card_image_count == 0 and cardimage.image_type == "front" and cardimage.card_id == card._id then
          %img.img-responsive{:src => "#{cardimage.photo.thumb.url}"}
          -card_image_count += 1

  -if card_counter == 2
    .clearfix.visible-lg
    .clearfix.visible-xs
  -elsif card_counter == 1
    .clearfix.visible-md
  -elsif card_counter == 0
    .clearfix.visible-xs
