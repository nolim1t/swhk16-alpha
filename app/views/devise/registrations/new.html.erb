<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default login-panel">
      <div class="panel-heading">
        <h2 class="panel-title  devise_form">New Account</h2>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <% if devise_error_messages!.length > 0 %>
          <div class="alert alert-warning">
          <%= devise_error_messages! %>
          </div>
          <% end %>
          <div class="field">
            <div class="col-md-6">
              <%= radio_button_tag(:accounttype, "standard", default: true) %> &nbsp; <%= label_tag(:accounttype, " Collector") %>
            </div>
            <div class="col-md-6">
              <%= radio_button_tag(:accounttype, "vendor") %> &nbsp;<%= label_tag(:accounttype, "Shopkeeper") %>
            </div>
          </div>

          <div class="field devise_form">
            <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true, required: true %>
          </div>

          <div class="field devise_form">
            <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true, required: true %>
          </div>

          <div class="field devise_form">
            <%= f.password_field :password, class: "form-control", placeholder: "Password (#{@minimum_password_length||6} Characters Minimum)", autocomplete: "off", required: true %>
          </div>

          <div class="field devise_form">
            <%= f.text_field :invite_code, class: "form-control", placeholder: "Invite Code",  autofocus: true, required: true %>
          </div>
          <div class="col-xs-12 text-center">
            <p> By clicking the Accept Button, you Accept the <a href="/information#Legal"> BETA Terms of use</a>
            </p>
            </div>

          <div class="actions devise_form">
            <%= f.submit "Accept", class: "btn btn-primary btn-lg btn-purple btn-devise" %>
          </div>
        <% end %>
        <div class="devise_form">
          <%= link_to "Already Registered? Login here", user_session_path %><br />
        </div>
        <div class="devise_form">
          <a href="mailto:suport@vaultarch.com?Subject=Invite%20Code" role="button">No Invite Code? Contact us</a>
        </div>
        <br />
      </div>
    </div>
  </div>
</div>
