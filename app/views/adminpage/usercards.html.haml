.row
	.col-lg-4.col-md-4.col-lg-offset-4.col-md-offset-4
		%h2{style:"color:#5f3d72"} User Card Detail

.row.top-buffer
	.col-lg-4.col-md-4.col-lg-offset-4.col-md-offset-4
		%p List of all cards for this user
.row.top-buffer
	.col-lg-4.col-md-4.col-lg-offset-4.col-md-offset-4
		-if @cards.count > 0
			%ul
				-@cards.each do |card|
					%li #{card.inspect}
		-else
			%p No cards for this user found
